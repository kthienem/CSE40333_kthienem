<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyMaterialTheme" parent="SuperMaterialTheme">
        <item name="colorPrimary">@color/colorPrimaryMaterial</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMaterial</item>
        <item name="colorAccent">@color/colorAccentMaterial</item>
        <item name="android:textColor">@color/textColorPrimaryMaterial</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryMaterial</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryMaterial</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowBackground">@color/windowBackgroundMaterial</item>
        <item name="colorControlHighlight">@color/colorControlHighlightMaterial</item>
        <item name="colorControlActivated">@color/colorControlActivatedMaterial</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/textColorPrimaryMaterial</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryMaterial</item>
        <item name="android:background">@color/colorPrimaryMaterial</item>
    </style>

    <style name="MyPopupTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/textColorPrimaryMaterial</item>
        <item name="android:background">@color/popupBackgroundMaterial</item>
    </style>
</resources>